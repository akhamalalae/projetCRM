    }

    $(document).ready( function () {
        //$('#table_id').DataTable();
        $(function() {
        $('.js-multiple').select2({
            placeholder: 'Choisir'
        });
        });
        $('#sandbox-container input').datepicker({
            todayBtn: "linked",
            format: "mm/dd/yy",
            language: "fr"
        });
        $('#table_id').DataTable( {
            responsive: true,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.11.3/i18n/fr_fr.json"
            }
        } );

    });
</script>
{% endblock %}